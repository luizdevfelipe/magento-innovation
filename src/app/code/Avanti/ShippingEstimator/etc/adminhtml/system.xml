<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="avanti" translate="label" sortOrder="999">
            <label>Avanti</label>
        </tab>

        <section id="avanti_shippingestimator" translate="label" sortOrder="900" showInDefault="1"
            showInWebsite="1" showInStore="1">
            <label>Avanti - Shipping Estimator</label>

            <tab>avanti</tab>
            <resource>Avanti_ShippingEstimator::shippingestimator_config</resource>
            
            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1"
                showInStore="1">

                <label>General Settings</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Enabled Avanti Shipping Estimator</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="cep_link" translate="label" type="text" sortOrder="30" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Find your CEP</label>
                    <comment>Enter a link of your preferred CEP lookup service</comment>
                </field>
            </group>

        </section>
    </system>
</config>