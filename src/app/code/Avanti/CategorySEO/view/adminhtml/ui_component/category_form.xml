<?xml version="1.0"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <!-- Fieldset para organizar o conteúdo SEO no formulário da categoria -->
    <fieldset name="seo_content_fieldset" sortOrder="90">
        <settings>
            <!-- Título exibido no admin -->
            <label translate="true">SEO Content</label>

            <!-- Permite expandir/recolher o fieldset -->
            <collapsible>true</collapsible>

            <!-- Começa fechado por padrão -->
            <opened>false</opened>
        </settings>

        <!-- Campo ligado diretamente ao atributo EAV 'seo_content' -->
        <field name="seo_content" sortOrder="10">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">

                    <!-- Tipo de dado tratado pelo UI Component -->
                    <item name="dataType" xsi:type="string">text</item>

                    <!-- Define o componente visual como editor WYSIWYG -->
                    <item name="formElement" xsi:type="string">wysiwyg</item>

                    <!-- Fonte dos dados: entidade Category -->
                    <item name="source" xsi:type="string">category</item>

                    <!-- Rótulo do campo -->
                    <item name="label" xsi:type="string" translate="true">
                        SEO Content
                    </item>

                    <!-- Ativa o editor WYSIWYG -->
                    <item name="wysiwyg" xsi:type="boolean">true</item>

                    <!-- Ativa o PageBuilder para esse campo -->
                    <item name="pagebuilderEnabled" xsi:type="boolean">true</item>

                    <!-- Altura inicial do editor -->
                    <item name="rows" xsi:type="number">20</item>

                    <!-- Torna o campo visível no formulário -->
                    <item name="visible" xsi:type="boolean">true</item>

                </item>
            </argument>
        </field>

    </fieldset>

</form>
