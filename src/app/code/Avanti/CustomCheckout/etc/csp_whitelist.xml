<?xml version="1.0"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">

    <policies>
        <!-- Content Security Policy -->
        <!-- Permite chamadas AJAX (fetch/XHR) para o ViaCEP -->
        <policy id="connect-src">
            <values>
                <value id="viacep" type="host">viacep.com.br</value>
                <value id="viacep-ws" type="host">www.viacep.com.br</value>
            </values>
        </policy>
    </policies>

</csp_whitelist>
