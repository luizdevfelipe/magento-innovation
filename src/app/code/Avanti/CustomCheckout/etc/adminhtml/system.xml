<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="avanti_customcheckout" translate="label" sortOrder="900" showInDefault="1"
            showInWebsite="1" showInStore="1">
            <label>Avanti - Custom Checkout</label>
            <tab>avanti</tab>

            <resource>Avanti_CustomCheckout::customcheckout_config</resource>

            <group id="general" translate="label" sortOrder="10" showInDefault="1" showInWebsite="1"
                showInStore="1">

                <label>General Settings</label>

                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Enabled Avanti CustomCheckout</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="enable_summary_message" translate="label" type="select" sortOrder="10"
                    showInDefault="1"
                    showInWebsite="1" showInStore="1">
                    <label>Enabled Custom Summary Message</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

            </group>
        </section>
    </system>
</config>