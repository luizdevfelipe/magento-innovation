<?xml version="1.0"?>
<!-- 
    Arquivo de configuração do Admin (system.xml)
    Define campos que aparecem em Stores > Configuration no Magento
-->
<config
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">

    <!-- 
        Nó raiz para configurações do Admin
        Tudo que aparece em Stores > Configuration fica dentro de <system>
    -->
    <system>

        <!-- 
            Define uma ABA (Tab) no menu de configuração do Admin
            Ex: Stores > Configuration > Avanti
        -->
        <tab id="avanti" translate="label" sortOrder="999">
            <!-- Nome exibido da aba -->
            <label>Avanti</label>
        </tab>

        <!-- 
            Define uma SEÇÃO dentro da aba
            É o primeiro nível clicável após selecionar a aba
        -->
        <section
            id="avanti_backtotop"
            translate="label"
            sortOrder="900"
            showInDefault="1"
            showInWebsite="1"
            showInStore="1">

            <!-- Título da seção no Admin -->
            <label>Avanti - Back To Top</label>

            <!-- 
                Indica em qual aba essa seção será exibida
                Deve bater com o id definido em <tab>
            -->
            <tab>avanti</tab>

            <!-- 
                ACL / Permissão
                Controla quem pode visualizar/editar essa seção
            -->
            <resource>Avanti_BackToTop::backtotop_config</resource>

            <!-- 
                Grupo de campos
                Visualmente vira um "fieldset" dentro da seção
            -->
            <group
                id="general"
                translate="label"
                sortOrder="10"
                showInDefault="1"
                showInWebsite="1"
                showInStore="1">

                <!-- Título do grupo -->
                <label>General Settings</label>

                <!-- 
                    Campo: Enabled
                    Tipo SELECT com Yes / No padrão do Magento
                -->
                <field
                    id="enabled"
                    translate="label"
                    type="select"
                    sortOrder="10"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">

                    <!-- Label exibido ao lado do campo -->
                    <label>Enabled Avanti BacktoTop</label>

                    <!-- 
                        Source Model
                        Classe que fornece as opções do select
                        Neste caso: Yes / No padrão do Magento
                    -->
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <!-- 
                    Campo: Position
                    Select customizado com opções vindas de um Source Model próprio
                -->
                <field
                    id="position"
                    translate="label"
                    type="select"
                    sortOrder="20"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">

                    <label>Position</label>

                    <!-- 
                        Source Model customizado
                        Define as opções de posição do botão (left, right)
                    -->
                    <source_model>Avanti\BackToTop\Model\Config\Source\Position</source_model>
                </field>

                <!-- 
                    Campo: Color
                    Campo de texto simples
                -->
                <field
                    id="color"
                    translate="label"
                    type="text"
                    sortOrder="30"
                    showInDefault="1"
                    showInWebsite="1"
                    showInStore="1">

                    <label>Button Color</label>

                    <!-- Texto auxiliar exibido abaixo do campo -->
                    <comment>Enter a HEX color (e.g. #000000)</comment>
                </field>

            </group>
        </section>
    </system>
</config>