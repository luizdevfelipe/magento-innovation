<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <head>
        <script src="js/product/related-products-slick.js" defer="defer"></script>
        <script src="Magento_Checkout::js/checkout-steps.js" defer="defer"></script>
    </head>

    <body>

         <!-- Remover o header padrão -->
        <referenceBlock name="page.header" remove="true"/>
        <referenceContainer name="header.container" remove="true"/>

        <!-- Adicionar um header customizado como na página de checkout -->
        <referenceContainer name="page.wrapper">
            <container name="checkout.header.container" as="checkout_header_container"
                label="Checkout Page Header Container" htmlTag="header" htmlClass="page-header"
                before="main.content">
                <container name="checkout.header.wrapper" label="Checkout Page Header"
                    as="checkout_header_wrapper" htmlTag="div" htmlClass="header content">
                    <block
                        class="Magento\Framework\View\Element\Template"
                        name="checkout.steps.indicator"
                        template="Magento_Checkout::checkout/steps.phtml"
                    />
                </container>
            </container>
        </referenceContainer>    
        <!-- Move a logo para o novo header customizado -->
        <move element="logo" destination="checkout.header.wrapper" before="-" />


        <!-- Troca de template no footer de checkout -->
        <referenceBlock name="footer_row_1">
            <arguments>
                <argument name="block_id" xsi:type="string">footer_row_1_checkout</argument>
            </arguments>
        </referenceBlock>

        <!-- Remove a newsletter -->
        <referenceContainer name="footer.newsletter" remove="true" />

    </body>
</page>