<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>

        <!-- Carregamento de texto personalizado dentro da página de histórico de pedidos -->
        <referenceContainer name="content">
            <container name="order.history.wrapper"
                htmlTag="div"
                htmlClass="order-history-wrapper"
                before="sales.order.history">

                <block class="Magento\Cms\Block\Block" name="order.history.message">
                    <arguments>
                        <argument name="block_id" xsi:type="string">
                            order_history_message
                        </argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
        
    </body>
</page>