    <li>
        <a href="<?= $block->getUrl('customer/account/logout') ?>">Sair</a>
    </li>

<?php else: ?>

    <li class="customer-auth-links">
        <span class="profile-icon">
            <img src="<?= $block->getViewFileUrl('Magento_Theme::images/user.svg') ?>" alt="Perfil">
