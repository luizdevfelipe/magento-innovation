<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>

        <referenceBlock name="content">

            <container name="customer.address.message.wrapper"
                       htmlTag="div"
                       htmlClass="customer-address-message-wrapper"
                       before="-">

                <block class="Magento\Cms\Block\Block"
                       name="customer.address.message">
                    <arguments>
                        <argument name="block_id" xsi:type="string">
                            customer_address_message
                        </argument>
                    </arguments>
                </block>

            </container>

        </referenceBlock>

    </body>
</page>
